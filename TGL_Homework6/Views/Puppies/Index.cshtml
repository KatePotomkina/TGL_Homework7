@model IEnumerable<Puppy>

@{
    ViewData["Title"] = "The List of Puppies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PuppyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PuppyName)
        </th>
       
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PuppyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuppyName)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.PuppyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PuppyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PuppyId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>